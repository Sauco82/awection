<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Date of birth</th>
    <th>Gender</th>
    <th>Email</th>
    <th>Active</th>
    <th>Key</th>
    <th>Newsletter</th>
    <th>Admin</th>
    <th>Autobidder</th>
    <th>Autobidder bid message</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.password %></td>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.date_of_birth %></td>
    <td><%=h user.gender_id %></td>
    <td><%=h user.email %></td>
    <td><%=h user.active %></td>
    <td><%=h user.key %></td>
    <td><%=h user.newsletter %></td>
    <td><%=h user.admin %></td>
    <td><%=h user.autobidder %></td>
    <td><%=h user.autobidder_bid_message %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

